# Stage 1: Build Angular SSR
FROM node:22-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build --prod

# Stage 2: Runtime Node SSR
FROM node:22-alpine
WORKDIR /app

# Copiar build completo do SSR
COPY --from=build /app/dist/frontend /app/dist/frontend
COPY package*.json ./
RUN npm ci --production

EXPOSE 4000

# Rodar SSR (entrypoint correto)
CMD ["node", "--experimental-specifier-resolution=node", "dist/frontend/server/main.server.mjs"]
