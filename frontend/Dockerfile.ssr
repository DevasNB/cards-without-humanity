# 1️⃣ Build Angular SSR
FROM node:22-alpine AS build
WORKDIR /app

COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build --prod

# 2️⃣ Runtime container (SSR)
FROM node:22-alpine AS ssr
WORKDIR /app

COPY --from=build /app/dist/frontend/server /app/dist/server
COPY package*.json ./
RUN npm ci --production

EXPOSE 4000
CMD ["node", "dist/server/main.js"]